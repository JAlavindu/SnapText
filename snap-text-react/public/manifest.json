{
  "manifest_version": 3,
  "name": "SnapText - Image Text Extractor",
  "version": "1.0",
  "description": "Extract text from images or screen regions and copy to clipboard.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "clipboardWrite",
    "offscreen"
  ],
  "host_permissions": ["http://*/*",
    "https://*/*"],
  "action": {
    "default_popup": "index.html"
  },
  "icons":{
    "32":"32.png"
  }
}
